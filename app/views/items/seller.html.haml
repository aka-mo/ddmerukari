- breadcrumb :show
= render "layouts/breadcrumbs"
.mypage
  = render 'left-bar'
  .mypage__right
    .mypage__right__user_name
      .mypage__right__user_name__upper
        = current_user.nickname
        さん
      .mypage__right__user_name__lower
        .mypage__right__user_name__lower__right
          出品数 
          = @num
    .mypage__right__buy-item
      .mypage__right__buy-item__head
        出品した商品
      .mypage__right__buy-item__content
        - @items.each do |item|
          .seller_image
            - item.images.each_with_index do |t, index|
              - if index == 0
                = link_to item_path(item.id) do
                  .seller-box
                    .seller-box__image
                      =image_tag t.src.url
                    .seller-box__form
                      .seller-box__form__name
                        =item.name
                      .seller-box__form__price
                        ="¥#{item.price}円"