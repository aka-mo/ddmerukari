.sign_up
  = render "header"
  .sign_up__section
    .sign_up__section__inner
      .sign_up__section__inner__title
        会員情報入力
      .sign_up__section__inner__form
        = form_for(@user, url: user_registration_path) do |f|
          = render "devise/shared/error_messages", resource: @user
          .field-top
            = f.label :nickname, "ニックネーム"
            %span.required
              必須
            %br/
            = f.text_field :nickname, class: "input-field", placeholder: "例）山田太郎"
          .field
            = f.label :email, "メールアドレス"
            %span.required
              必須
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field", placeholder: "PC・携帯どちらでも可"
          .field
            = f.label :password, "パスワード"
            %span.required
              必須
            %br/
            = f.password_field :password, autocomplete: "new-password", class: "input-field", placeholder: "#{@minimum_password_length}文字以上"
          .field
            = f.label :password_confirmation, "パスワード（確認）"
            %span.required
              必須
            %br/
            = f.password_field :password_confirmation, autocomplete: "new-password", class: "input-field", placeholder: "#{@minimum_password_length}文字以上"
          .sub-title
            %h3.title
              本人確認
            %p.text
              安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。
          .name
            %h3.text 
              お名前（全角)
              %span.required
                必須
            .name_field
              = f.label :last_name
              = f.text_field :last_name, placeholder: "例）山田", class: "input-box"
              = f.label :first_name
              = f.text_field :first_name, placeholder: "例）太郎", class: "input-box"
          .name-kana
            %h3.text 
              お名前カナ（全角）
              %span.required
                必須
            .kana_field
              = f.label :first_name_kana
              = f.text_field :last_name_kana, placeholder: "例）ヤマダ", class: "input-box"
              = f.label :last_name_kana
              = f.text_field :first_name_kana, placeholder: "例）タロウ", class: "input-box"
          .birthday
            %h3.text 
              生年月日
              %span.required
                必須
            .birthday_field
              = f.label :birth_year
              = f.text_field :birth_year, class: "input-box", placeholder: "例）2012"
              %span.text
                年
              = f.label :birth_month
              = f.number_field :birth_month, class: "input-box", placeholder: "例）11"
              %span.text
                月
              = f.label :birth_day
              = f.number_field :birth_day, class: "input-box", placeholder: "例）24"
              %span.text
                日
          .actions
            = f.submit "次へ進む", class: "next-btn"
  = render "footer"

